@model Shop.Models.Order

@{
    ViewData["Title"] = "Edit Order";
    Layout = "~/Views/Shared/_Layout-Admin.cshtml";
}

<div class="dashboard-page-content">
    <div class="row mb-9 align-items-center">
        <div class="col-xxl-9">
            <div class="row">
                <div class="col-sm-6 mb-8 mb-sm-0">
                    <h2 class="fs-4 mb-0">Edit Order</h2>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-xxl-9">
            <div class="card rounded-4">
                <div class="card-body p-7">
                    <div class="row mx-n7">
                        <div class="col-lg-12 px-7">
                            <section class="p-xl-5">
                                <form asp-action="Edit" method="post">
                                    <input type="hidden" asp-for="ID" />

                                    @* <div class="row mb-8"> *@
                                    @*     <label class="col-lg-3 col-form-label mb-2 fs-13px ls-1 fw-semibold text-uppercase" for="Name">Name</label> *@
                                    @*     <div class="col-lg-9"> *@
                                    @*         <input asp-for="Name" class="form-control" placeholder="Type here" /> *@
                                    @*         <span asp-validation-for="Name" class="text-danger"></span> *@
                                    @*     </div> *@
                                    @* </div> *@
                                    @* <div class="row mb-8"> *@
                                    @*     <label class="col-lg-3 col-form-label mb-2 fs-13px ls-1 fw-semibold text-uppercase" for="Email">Email</label> *@
                                    @*     <div class="col-lg-9"> *@
                                    @*         <input asp-for="Email" class="form-control" placeholder="Type here" /> *@
                                    @*         <span asp-validation-for="Email" class="text-danger"></span> *@
                                    @*     </div> *@
                                    @* </div> *@
                                    <div class="row mb-8">
                                        <label class="col-lg-3 col-form-label mb-2 fs-13px ls-1 fw-semibold text-uppercase" for="TotalPrice">Total Price</label>
                                        <div class="col-lg-9">
                                            <input asp-for="TotalPrice" class="form-control" placeholder="Type here" />
                                            <span asp-validation-for="TotalPrice" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="row mb-8">
                                        <label class="col-lg-3 col-form-label mb-2 fs-13px ls-1 fw-semibold text-uppercase">Status</label>
                                        <div class="col-lg-9">
                                            <select asp-for="Status" class="form-select" name="Status">
                                                <option value="pending">Pending</option>
                                                <option value="received">Received</option>
                                                <option value="cancel">Cancel</option>
                                            </select>
                                            <span asp-validation-for="Status" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="row mb-8">
                                        <label class="col-lg-3 col-form-label mb-2 fs-13px ls-1 fw-semibold text-uppercase" for="Date">Date</label>
                                        <div class="col-lg-9">
                                            <input asp-for="Date" class="form-control" placeholder="Type here" />
                                            <span asp-validation-for="Date" class="text-danger"></span>
                                        </div>
                                    </div>



                                    <br>
                                    <button class="btn btn-primary" type="submit">Save Changes</button>
                                    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                                </form>
                            </section>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
