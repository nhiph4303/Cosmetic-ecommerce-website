                         alt="goodness">

                </div>
                <div class="client-logo-item">
                    <img class="lazy-image w-auto mx-auto opacity-30 light-mode-img" src="#"
                         data-src="@Url.Content("~/assets/images/c4.webp")" width="250" height="150"
                         alt="goodness">

                </div>
                <div class="client-logo-item">
                    <img class="lazy-image w-auto mx-auto opacity-30 light-mode-img" src="#"
                         data-src="@Url.Content("~/assets/images/c5.webp")" width="250" height="150"
                         alt="goodness">

                </div>
                <div class="client-logo-item">
                    <img class="lazy-image w-auto mx-auto opacity-30 light-mode-img" src="#"
                         data-src="@Url.Content("~/assets/images/c6.webp")" width="250" height="150"
                         alt="goodness">

