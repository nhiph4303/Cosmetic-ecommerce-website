@model Cosmetic.Models.ViewModels.ChangePasswordCustomerViewModel
@{
}
<div class="card border-0 user-profile-content shadow-sm">
    <div class="card-header bg-white py-4 px-4 px-lg-5 border-bottom user-profile-content__header">
        <div class="d-flex align-items-center justify-content-between">
            <h5 class="card-title mb-0">
                <i class="fas fa-lock me-2 text-primary"></i>
                Change Password
            </h5>
            <a class="user-profile-content__back-link text-decoration-none" asp-controller="Customer" asp-action="Index" asp-route-section="CustomerProfile" asp-route-mode="Default">
                <i class="fas fa-arrow-left me-1"></i>
                Back to Profile
            </a>
        </div>
    </div>
    <div class="card-body p-4 p-lg-5">
        <form class="user-password-change__form" id="changePasswordCustomerForm" action="/Customer/ChangePasswordCustomer" onsubmit="submitFormData('changePasswordCustomerForm','PUT'); return false;">
            <div class="row justify-content-center">
                <div class="col-lg-8">
                    <div class="user-password-change__form-group mb-4">
                        <label for="currentPassword" class="form-label">Current Password <span class="text-danger">*</span></label>
                        <div class="input-group">
                            <span class="input-group-text bg-light">
                                <i class="fas fa-key text-muted"></i>
                            </span>
                            <input type="password" class="form-control" id="currentPassword" placeholder="Enter your current password" required asp-for="Password">
                            <button class="btn btn-outline-secondary toggle-password" type="button" onclick="togglePassword(this)">
                                <i class="fas fa-eye"></i>
                            </button>
                        </div>
                        <span asp-validation-for="Password" class="text-danger fs-13px field-error"></span>
                    </div>

                    <div class="user-password-change__form-group mb-4">
                        <label for="newPassword" class="form-label">New Password <span class="text-danger">*</span></label>
                        <div class="input-group">
                            <span class="input-group-text bg-light">
                                <i class="fas fa-lock text-muted"></i>
                            </span>
                            <input type="password" class="form-control" id="newPassword" placeholder="Enter new password" required asp-for="NewPassword">
                            <button class="btn btn-outline-secondary toggle-password" type="button" onclick="togglePassword(this)">
                                <i class="fas fa-eye"></i>
                            </button>
                        </div>
                        <span asp-validation-for="NewPassword" class="text-danger fs-13px field-error"></span>
                    </div>

                    <div class="user-password-change__form-group mb-5">
                        <label for="confirmPassword" class="form-label">Confirm New Password <span class="text-danger">*</span></label>
                        <div class="input-group">
                            <span class="input-group-text bg-light">
                                <i class="fas fa-lock text-muted"></i>
                            </span>
                            <input type="password" class="form-control" id="confirmPassword" placeholder="Confirm new password" required asp-for="ConfirmPassword">
                            <button class="btn btn-outline-secondary toggle-password" type="button" onclick="togglePassword(this)">
                                <i class="fas fa-eye"></i>
                            </button>
                        </div>
                        <span asp-validation-for="ConfirmPassword" class="text-danger fs-13px  field-error"></span>
                    </div>

                    <div class="border-top pt-4 mt-2 d-flex justify-content-end">
                        <a  class="btn btn-light me-3 px-4" asp-controller="Customer" asp-action="Index" asp-route-section="CustomerProfile" asp-route-mode="Default">
                            Cancel
                        </a>
                        <button type="submit" class="btn btn-primary px-4">
                            <i class="fas fa-check-circle me-2"></i>
                            Update Password
                        </button>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>